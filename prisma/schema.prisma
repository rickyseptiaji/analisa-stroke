generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "windows"]
  output        = "../src/app/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       Int     @id @default(autoincrement())
  nama     String? @db.VarChar(50)
  username String  @unique @db.VarChar(50)
  password String? @db.VarChar(255)
}

model Pasien {
  id            Int      @id @default(autoincrement())
  nik           String   @unique @db.VarChar(50)
  nama_lengkap  String   @db.VarChar(50)
  tanggal_lahir DateTime
  umur          Int      @db.Integer()
  jenis_kelamin String   @db.VarChar(50)
  phone         String   @db.VarChar(50)
  alamat        String   @db.VarChar(255)

  hasil Hasil[]
}

model Gejala {
  kd_gejala   String   @unique @db.VarChar(10)
  nama_gejala String   @db.VarChar(50)
  poin_gejala String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  pengetahuan Pengetahuan[] @relation("GejalaToPengetahuan")
  relasi      Relasi[]      @relation("GejalaToRelasi")
  hasil       Hasil[]       @relation("GejalaToHasil")
}

model Penyakit {
  kd_penyakit   String @unique @db.VarChar(10)
  nama_penyakit String @db.VarChar(50)
  pengetahuan Pengetahuan[] @relation("PenyakitToPengetahuan")
  relasi      Relasi[]      @relation("PenyakitToRelasi")
  hasil       Hasil[]       @relation("PenyakitToHasil")
  solusi      Solusi[]      @relation("PenyakitToSolusi")
}

model Solusi {
  id          Int      @id @unique @default(autoincrement())
  solusi      String   @db.Text
  kd_penyakit String
  penyakit    Penyakit @relation("PenyakitToSolusi", fields: [kd_penyakit], references: [kd_penyakit])
}

model Pengetahuan {
  kd_pengetahuan String @unique @db.VarChar(10)
  kd_gejala      String @db.VarChar(10)
  kd_penyakit    String @db.VarChar(10)
  pertanyaan     String

  gejala   Gejala   @relation("GejalaToPengetahuan", fields: [kd_gejala], references: [kd_gejala])
  penyakit Penyakit @relation("PenyakitToPengetahuan", fields: [kd_penyakit], references: [kd_penyakit])
}

model Relasi {
  id          Int    @id @unique @default(autoincrement())
  kd_gejala   String @db.VarChar(10)
  kd_penyakit String @db.VarChar(10)

  gejala   Gejala   @relation("GejalaToRelasi", fields: [kd_gejala], references: [kd_gejala])
  penyakit Penyakit @relation("PenyakitToRelasi", fields: [kd_penyakit], references: [kd_penyakit])
  hasil    Hasil[]  @relation("RelasiToHasil")

  @@unique([kd_gejala, kd_penyakit])
}

model Hasil {
  id          Int    @id @unique @default(autoincrement())
  kd_gejala   String @db.VarChar(10)
  kd_penyakit String @db.VarChar(10)
  poin_gejala String
  poin_user   String
  pasienId    Int

  pasien   Pasien   @relation(fields: [pasienId], references: [id])
  gejala   Gejala   @relation("GejalaToHasil", fields: [kd_gejala], references: [kd_gejala])
  penyakit Penyakit @relation("PenyakitToHasil", fields: [kd_penyakit], references: [kd_penyakit])
  relasi   Relasi?  @relation("RelasiToHasil", fields: [kd_gejala, kd_penyakit], references: [kd_gejala, kd_penyakit])
}
